
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h1>welcome to book store aplication</h1>
    <h1>@DateTime.Now</h1>
    @{
        int a = 10;
        int b = 0;
    }
    <h1>Ternary - @(a==10 ? b=10 : b=5)</h1>
    <h1>value of b = @b</h1>
    @if (true)
    {
        <h1>hello if block</h1>
    }

    @{
        int v =7;
    }
    @switch (v)
    {
        case 1:<h1>I am 1</h1>
            break;
        case 2:<h1>I am 2</h1>
            break;
        case 3:<h1>I am 3</h1>
            break;
        case 4:<h1>I am 4</h1>
            break;
        case 5:<h1>I am 5</h1>
            break;
        default:<h1>I am default</h1>
            break;
    }
    @for(int i = 0; i < 10; i++)
            {
                <h1>welcom to book store application index @i</h1>
            }

    @{ 
        var list = new List<int>() { 1, 2, 3, 4, 5, 6 };
    }

    @foreach(var item in list)
            {
                <h1>@item</h1>
            }

</body>
</html>
