@model BookModel
<div class="card mb-4 shadow-sm">
      <img src="@(string.IsNullOrEmpty(Model.CoverImageUrl) ? "/image/noimage.png" : Model.CoverImageUrl)" class="img-thumbnail" />
        <div class="card-body">
            <h3 class="card-title">@(string.IsNullOrEmpty(Model.Title)?"Name is Not available":Model.Title)</h3>
            <p class="card-text"> @(string.IsNullOrEmpty(Model.Discription)?"Name is Not available":Model.Discription)</p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <a asp-controller="book" asp-action="getbook"
                       asp-route-id="@Model.Id" asp-route-nameOfBook="@Model.Title"
                       class="btn btn-sm btn-outline-secondary">View details</a>
                </div>
                <small class="text-muted">@(string.IsNullOrEmpty(Model.Author)?"NA":Model.Author)</small>
            </div>
        </div>
    </div>